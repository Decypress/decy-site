<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>decypress</title>
		<link rel="stylesheet" href="/decystyle.css">
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
	</head>
	<body>
		<!-- Flexbox Design -->
		<div class="pageBox">
			<div class="pageBoxSidebar">
				<h1><a href="/index.html">decypress</a></h1>
				<p>- RECENT POSTS -<p>
				{% for post in collections.posts %}
					<h2><a href="{{post.url}}">{{post.data.pageTitle}}</a></h2>
					<div class="postDate"><p>{{post.date | date: "%Y-%m-%d" }}</p></div>
				{% endfor %}
			</div>
			<div class="pageBoxMainbar">
				<h1>{{ pageTitle }}</h1>
				<p>{{ content }}</p>
			</div>
		</div>
		
	</body>
</html>